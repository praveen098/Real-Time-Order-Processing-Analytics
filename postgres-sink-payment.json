{
  "name": "postgres-sink-payment",
  "config": {
    "connector.class":    "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max":          "1",
    "topics":             "payment-succeeded,payment-failed",
    "connection.url":     "jdbc:postgresql://postgres:5432/orders?user=demo&password=demo",
    "auto.create":        "true",
    "auto.evolve":        "true",
    "insert.mode":        "upsert",
    "pk.mode":            "record_key",
    "pk.fields":          "paymentId",
    "table.name.format":  "${topic}"
  }
}
